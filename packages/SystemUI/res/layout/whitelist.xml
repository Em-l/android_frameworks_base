<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:orientation="horizontal" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dip">
        <ProgressBar android:id="@+id/loadingProgressBar"    
            style="?android:attr/progressBarStyleSmall" 
            android:layout_width="wrap_content"   
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:paddingRight="5dip"
            android:layout_alignParentLeft="true"/> 
        <TextView android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#515151"
            android:layout_toRightOf="@id/loadingProgressBar"
            android:text="@string/loading_apps_list"
            />
    </RelativeLayout>

    <TextView android:id="@+id/noApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#515151"
            android:text="@string/no_app"
            />
        
    <ListView android:id="@id/android:list" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip"
        android:cacheColorHint="#00000000"
        android:layout_weight="1.0" />
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/ButtonBar" >
        <Button android:id="@+id/ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:text="@string/ok"
            />
        <Button android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:text="@string/cancel"
            />
    </LinearLayout>-->
</LinearLayout>
