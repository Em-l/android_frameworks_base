<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/power_widget_button"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_vertical"
        >
	<LinearLayout 
		android:layout_width="80dip"
		android:layout_height="wrap_content"  
		android:orientation="vertical"
		android:layout_weight="0"
		>

		<ImageView android:id="@+id/power_widget_button_image"
			android:layout_width="match_parent"
			android:layout_height="35dip"   
			android:layout_weight="1"
			android:src="@drawable/light_c_1"
			android:scaleType="fitCenter" />

		<TextView android:id="@+id/buttontext"
			android:layout_width="wrap_content" 
			android:layout_height="20dip" 
			android:textSize="14sp" 
			android:padding="2dip" 
			android:gravity="bottom|center_horizontal"
			android:layout_gravity="bottom|center_horizontal"
			android:text="@string/brightness"
		/>
	</LinearLayout>	        
	        
	<RelativeLayout android:id="@+id/seekbar_layout"
		android:orientation="horizontal"
		android:layout_weight="4"
		android:layout_width="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_alignParentTop="true"
		android:layout_marginTop="0dip"
		android:layout_marginRight="10dip"
		android:layout_height="35dip" >
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/light_a"		        
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:scaleType="fitCenter"
			/>

		<SeekBar android:id="@+id/seekbar"
			style="?android:attr/progressBarStyleHorizontal" 
			android:layout_width="fill_parent"
			android:layout_weight="6"
			android:layout_marginRight="35dip"
			android:layout_marginLeft="35dip"
			android:layout_height="wrap_content" 
			android:progressDrawable="@drawable/seekbar_img"
			android:thumb="@drawable/thumb"
			android:layout_centerHorizontal="true"
			android:layout_alignParentTop="true"
			android:minHeight="10dip" 
			android:maxHeight="10dip"
			android:thumbOffset="8dip" 
			/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/light_b"	
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:scaleType="fitCenter"
			/>	
	</RelativeLayout>              
    
</LinearLayout>