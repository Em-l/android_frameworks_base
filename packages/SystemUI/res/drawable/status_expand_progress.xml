<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:id="@android:id/background">  
         <shape>  
             <corners android:radius="0dip" />  
             <gradient android:startColor="#FFCAEEFC"  
                 android:centerColor="#FFCAEEFC" android:endColor="#FFCAEEFC"  
                 android:centerY="0.75" android:angle="270" />  
         </shape>  
     </item>  
     
      <item android:id="@android:id/progress">  
         <clip>  
             <shape>  
                 <corners android:radius="0dip" />  
                <gradient android:startColor="#ff39B9F6"  
                     android:centerColor="#ff39B9F6" android:endColor="#ff39B9F6"  
                     android:centerY="0.75" android:angle="270" />  
            </shape>  
        </clip>
     </item>
</layer-list>