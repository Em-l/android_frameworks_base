<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:id="@android:id/background">  
         <shape>  
             <corners android:radius="5dip" />  
             <gradient android:startColor="#ff16191b"  
                 android:centerColor="#ff1e2326" android:endColor="#ff15181a"  
                 android:centerY="0.75" android:angle="270" />  
         </shape>  
     </item>  
   
     <item android:id="@android:id/progress">  
         <clip>  
             <shape>  
                 <corners android:radius="5dip" />  
                <gradient android:startColor="#ffadadad"  
                     android:centerColor="#fff0f0f0" android:endColor="#ff555555"  
                     android:centerY="0.75" android:angle="270" />  
            </shape>  
        </clip>
     </item>  
</layer-list>